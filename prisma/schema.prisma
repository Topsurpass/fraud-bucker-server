generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(uuid())
  firstname      String
  lastname       String
  email          String   @unique
  phone          String
  role           String
  password       String
  refreshToken   String? @db.VarChar(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id            String  @id @default(uuid())
  merchantId    String
  merchant      String
  amount        Decimal
  type          String
  channel       String
  channelId     String
  analyst       String
  analystId     String
  status        String
  date          String
}

model Merchant {
  id            String  @id @default(uuid())
  merchant      String
  date          String
}

model FraudContact {
  id            String  @id @default(uuid())
  merchantId    String
  merchant      String
  name          String
  phone         String
  email         String
}

model Channel {
  id            String  @id @default(uuid())
  channel       String
  date          String
}